<?xml version='1.0' encoding='utf-8'?>
<widget id="com.space.company" defaultlocale="en-GB" locale="en-GB" version="0.1.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>SpaceCompany</name>
    <description>
        Space Company is a science-fiction incremental game where you start from humble beginnings on Earth, working your way up to travelling between star systems and building Dyson Spheres and pretty much colonising the entire galaxy(ies?)
    </description>
    <author email="info@adelmann-solutions.com" href="https://adelmann-solutions.com">
        adelmann-solutions
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <icon src="res/logo.png" />
    <icon src="res/logo.png" density="ldpi" />
    <icon src="res/logo.png" density="mdpi" />
    <icon src="res/logo.png" density="hdpi" />
    <icon src="res/logo.png" density="xhdpi" />
    <icon src="res/logo.png" density="xxhdpi" />
    <icon src="res/logo.png" density="xxxhdpi" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
